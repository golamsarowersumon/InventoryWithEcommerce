@model IEnumerable<Domain.ViewModels.ReligionViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReligionName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ReligionName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ReligionId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ReligionId }) |
            @*@Html.ActionLink("Delete", "Delete", new { id=item.ReligionId })*@
            <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "Religion", new { id=@item.ReligionId})')"><i class="fa fa-trash fa-lg"></i></a>
        </td>
    </tr>
}

</table>
