@model IEnumerable<Domain.ViewModels.LayerViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LayerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LayerName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LayerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LayerName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LayerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.LayerId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LayerId })
        </td>
    </tr>
}

</table>
