@model Domain.ViewModels.RawMaterialsViewModel

@{
    ViewBag.Title = "Edit";
}


<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-12">

            <div class="panel panel-info card-2 mt">


                <div class="panel-heading">
                    <div class="panel-title">Update State Information</div>


                </div>

                <div class="panel-body">


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-md-10 col-md-offset-1" style="margin-top:15px;">

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.RawMaterialId)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ItemName, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(model => model.ItemId, ViewBag.ItemList as SelectList, "", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ItemId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ItemElementName, htmlAttributes: new { @class = "control-label col-md-4" })
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(a => a.ItemElementId, ViewBag.ItemElementList as SelectList, "Please Select Element Name", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ItemElementId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-8">
                                        <input type="submit" value="Save" class="btn btn-default" />
                                        <a href="@Url.Action("Index", "RawMaterials")" class="btn btn-default btn-sm">
                                            <span class="glyphicon glyphicon-arrow-left"></span> Go Back
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }



                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}