                @Html.DropDownListFor(a => a.DistrictId, ViewBag.DistrictList as SelectList, "Please Select Country Name", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DistrictId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DistrictName, htmlAttributes: new { @class = "control-label col-md-2" })
